											<td class="product-total "><div class="total-show" ><button type="button" class="btn btn-outline-dark" onclick="addToCart(event, '<%= wishlstItems.productDetails[0]._id %>')">Add To Cart</button>
											</div></td>
										</tr>
								    <% }); %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	<% } %>
