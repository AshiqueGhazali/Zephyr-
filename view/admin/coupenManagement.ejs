        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
                <div class="col-12 col-xl-8 mb-4 mb-xl-10">
                  <h3 class="font-weight-bold mb-10 ">COUPON MANAGEMENT</h3>
                </div>
              </div>
            <div class="row">
              <div class="col-12 col-xl-8 mb-4">
                <!-- <form action="/admin/searchCoupen" method="get">
                    <input type="text" name="search" placeholder="Search by name">
                    <button>Search</button>
                </form>
                <a href="/admin/coupenManagement"><button>Show All Users</button></a> -->
            </div>

            <!-- pagination -->
            <div class="col-12 col-xl-4">
              <div class=" row">
                <div class="col-6 col-xl-6">
                    <div class="justify-content-end d-flex">
                     <a href="/admin/addCoupen"><button class="btn-info">Add Coupen</button></a>
                    </div>
                 </div>
                 <!-- pagination -->
                  <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-end">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/admin/coupenManagement?page=<%= currentPage - 1 %>" tabindex="-1">Previous</a>
                            </li>
                        <% } else { %>
                            <li class="page-item disabled">
                                <a class="page-link" href=" " tabindex="-1">Previous</a>
                            </li>
                        <% } %>
                
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="/admin/coupenManagement?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="/admin/coupenManagement?page=<%= currentPage + 1 %>">Next</a>
                            </li>
                        <% } else { %>
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Next</a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
              </div>
            </div>


              <div class="col-md-12 grid-margin stretch-card">
                <div class="container">
                    <% if (coupens.length > 0){ %>

                    
                    <table>
                        <thead>
                            <tr>
                                <th>Coupon Code</th>
                                <th>Discount</th>
                                <th>Expires at</th>
                                <th>Minimum Purchase</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i =0 ; i < coupens.length ; i++){ %>  
                            <tr>
                                <td><%= coupens[i].coupenCode %></td>
                                <td><%= coupens[i].discountPercentage %> %</td>
                                <td><%= new Date(coupens[i].expiredDate ).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' }) %></td>
                                <td>₹ <%= coupens[i].minPurchaseAmt %></td>
                                <% if (coupens[i].status){ %> 
                                    <td>Active</td>
                                    <td>
                                        <button class="edit-btn btn-info block-btn" onclick="coupenStatusChange('<%= coupens[i]._id %>',true)">Inactivate</button>
                                    </td>
                                <%}else{ %> 
                                    <td>Inactive</td>
                                    <td>
                                        <button class="edit-btn btn-info block-btn" onclick="coupenStatusChange('<%= coupens[i]._id %>',false)">Activate</button>
                                    </td>
                                <% } %>
                                
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <% }else{ %> 
                        <h3>no Coupen Found</h3>
                    <%} %>
                </div>
              </div>
            </div> 
          </div>
          

          <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2024.<a href="" target="_blank">Zephyr</a></span>
            </div>
          </footer> 
        </div>
      </div>   
    </div>

    <script>
      function coupenStatusChange(coupenId,status) {
        Swal.fire({
          title: "Are you sure?",
          text: "You won't be able to revert this!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonText: status ? "Yes, inactivate Coupen!" : "Yes, Activate Coupen!",
          cancelButtonText: "No, cancel!",
          reverseButtons: true
        }).then((result) => {
          if (result.isConfirmed) {
            fetch(`/admin/coupenStatusChange?coupenId=${coupenId}`, {
              method: 'GET' 
            })
            .then(response => {
              if (response.ok) {
                Swal.fire({
                  title: status ? "User Inactivated!" : "User Activated!",
                  text: status ? "The Coupen has been Inactivated." : "The Coupen has been Activated.",
                  icon: "success"
                }).then(() => {
                  window.location.reload();
                });
              } else {
                Swal.fire({
                  title: "Error",
                  text: "An error occurred while changing coupen status.",
                  icon: "error"
                });
              }
            })
            .catch(error => {
              
              console.error("Error:", error);
              Swal.fire({
                title: "Error",
                text: "An error occurred while changing coupen status.",
                icon: "error"
              });
            });
          }
        });
      }

    </script>

