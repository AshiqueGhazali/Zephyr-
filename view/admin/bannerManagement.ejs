            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/productManagement">
                <i class="fa-brands menu-icon fa-shopify"></i>
                <span class="menu-title">Product Management</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/categoryManagement">
                <i class="fa-solid menu-icon fa-layer-group"></i>
                <span class="menu-title">Category Management</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/orderManagement">
                <i class="fa-solid menu-icon fa-cart-plus"></i>
                <span class="menu-title">Order Management</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/coupenManagement">
                <i class="fa-solid menu-icon fa-tags"></i>
                <span class="menu-title">Coupon Management</span>
              </a>
            </li>
            <li class="nav-item" >
              <a class="nav-link" href="/admin/offerManagement">
                <i class="fa-solid menu-icon fa-tag" ></i>
                <span class="menu-title">Offer Management</span>
              </a>
            </li>
            <li class="nav-item" style="background-color:  #5050b2; border-radius: 8px;">
              <a class="nav-link" href="/admin/bannerManagement">
                <i class="fa-solid menu-icon fa-images" style="color: #ffffff;"></i>
                <span class="menu-title" style="color: #ffffff;">Banner Management</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/logout">
                <i class="fa-solid menu-icon fa-arrow-right-from-bracket"></i>
                <span class="menu-title">Logout</span>
              </a>
            </li>
          </ul>
        </nav>
        <!-- sidebar -->
        
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-sm-8 mb-10 ">
                        <h3 class="font-weight-bold">BANNER MANAGEMENT</h3>
                    </div>
                    <div class="col-sm-4  mt-10 d-flex justify-content-end">
                        <a href="/admin/addbanner" class="btn btn-secondary btn-lg " role="button" aria-pressed="true">ADD BANNER</a>
                    </div>
                </div>
                <br>
                <!-- pagination -->
                <nav aria-label="Page navigation example">
                  <ul class="pagination justify-content-end">
                      <% if (currentPage > 1) { %>
                          <li class="page-item">
                              <a class="page-link" href="/admin/bannerManagement?page=<%= currentPage - 1 %>" tabindex="-1">Previous</a>
                          </li>
                      <% } else { %>
                          <li class="page-item disabled">
                              <a class="page-link" href=" " tabindex="-1">Previous</a>
                          </li>
                      <% } %>
              
                      <% for (let i = 1; i <= totalPages; i++) { %>
                          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                              <a class="page-link" href="/admin/bannerManagement?page=<%= i %>"><%= i %></a>
                          </li>
                      <% } %>
              
                      <% if (currentPage < totalPages) { %>
                          <li class="page-item">
                              <a class="page-link" href="/admin/bannerManagement?page=<%= currentPage + 1 %>">Next</a>
                          </li>
                      <% } else { %>
                          <li class="page-item disabled">
                              <a class="page-link" href="#" tabindex="-1">Next</a>
                          </li>
                      <% } %>
                  </ul>
              </nav>
              <!-- pagination -->
                  <br>
                <% if(banners.length > 0) { %> 
                    <%banners.forEach(item=>{ %> 
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img class="card-img-top" src="/assets/categoryImg/<%= item.bannerImage %>" style="width: 50%; height: auto;" alt="<%= item.bannerImage %>">
                        </div>
                        <div class="col-6">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.head %></h5>
                                <p class="card-text"><%= item.subHead %></p>
                            </div>
                        </div>
                        <div class="col-8">
                      </div>
                      <div class="col-4">
                          <div class="card-body">
                            <a href="/admin/editBanner?bannerId=<%= item._id %>" type="button" class="btn btn-outline-info"><i class="fa-regular fa-pen-to-square"></i></a>
                            <% if( item.status) { %> 
                              <button type="button" class="btn btn-outline-info" onclick="listAndUnlistBanner('<%= item._id %>',true)"><i class="fa-regular fa-eye-slash "></i></button>
                            <% }else { %> 
                              <button type="button" class="btn btn-outline-info" onclick="listAndUnlistBanner('<%= item._id %>',false)"><i class="fa-regular fa-eye "></i></button>
                            <% } %>
                            <button type="button" class="btn btn-outline-danger" onclick="deleteBanner('<%= item._id %>')"><i class="fa-solid fa-trash"></i></button>
                          </div>
                      </div>
                    </div>
                </div>
                <% }) %>
                <% } %>
                


            </div>   

        <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright Â© 2024.<a href="" target="_blank">Zephyr</a></span>
            </div>
        </footer>  
    </div>  
     
<script>
  function listAndUnlistBanner(bannerId,status) {
        Swal.fire({
          title: "Are you sure?",
          text: "You won't be able to revert this!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonText: status ?  "Yes, UnList banner!" : "Yes, List banner!",
          cancelButtonText: "No, cancel!",
          reverseButtons: true
        }).then((result) => {
          if (result.isConfirmed) {
            fetch(`/admin/listAndUnlistBanner?bannerId=${bannerId}`, {
              method: 'GET' 
            })
            .then(response => {
              if (response.ok) {
                Swal.fire({
                  title: status ?  "banner UnListed!" : "banner Listed!",
                  text: status ?  "The banner has been Unlisred." : "The banner has been Listed.",
                  icon: "success"
                }).then(() => {
                  window.location.reload();
                });
              } else {
                Swal.fire({
                  title: "Error",
                  text: "An error occurred while blocking the user.",
                  icon: "error"
                });
              }
            })
            .catch(error => {
              
              console.error("Error:", error);
              Swal.fire({
                title: "Error",
                text: "An error occurred while blocking the user.",
                icon: "error"
              });
            });
          }
        });
      }

      // delete Banner
      function deleteBanner(bannerId) {
        Swal.fire({
          title: "Are you sure?",
          text: "You won't be able to revert this!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonText: "Yes, Delete banner!",
          cancelButtonText: "No, cancel!",
          reverseButtons: true
        }).then((result) => {
          if (result.isConfirmed) {
            fetch(`/admin/deleteBanner?bannerId=${bannerId}`, {
              method: 'DELETE' 
            })
            .then(response => {
              if (response.ok) {
                Swal.fire({
                  title:"Banner Dleted!",
                  text:"The banner has been Deleted.",
                  icon: "success"
                }).then(() => {
                  window.location.reload();
                });
              } else {
                Swal.fire({
                  title: "Error",
                  text: "An error occurred while blocking the user.",
                  icon: "error"
                });
              }
            })
            .catch(error => {
              
              console.error("Error:", error);
              Swal.fire({
                title: "Error",
                text: "An error occurred while blocking the user.",
                icon: "error"
              });
            });
          }
        });
      }
</script>
   

